[
  {
    "name"              : "node-app",
    "script"            : "app.js",
    "log_date_format"   : "YYYY-MM-DD HH:mm Z",
    "merge_logs"        : false,
    "watch"             : false,
    "max_restarts"      : 10,
    "exec_interpreter"  : "node",
    "exec_mode"         : "fork_mode",
    "cwd" : "{{ install_dir }}",
    "env":
    {
      "NODE_ENV"        : "production",
      "RPC_HOST"        : "localhost",
      "RPC_PORT"        : "8545",
      "LISTENING_PORT"  : "40404",
      "INSTANCE_NAME"   : "{{ inventory_hostname }}: {{ group_names | join(',') }}",
      "CONTACT_DETAILS" : "{{ inventory_hostname }}",
      "WS_SERVER"       : "ws://{{ groups['stats'][0] }}:3000",
      "WS_SECRET"       : "{{ ws_secret }}",
      "VERBOSITY"       : 2
          
    }
      
  }
]

